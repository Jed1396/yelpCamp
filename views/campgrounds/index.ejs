<% layout('./layout/boilerplate')%>

    <div id="map" style="width: 100%; height:500px" class="mx-3 my-3"></div>
    <h1>All campgrounds</h1>
    <a href="/campgrounds/newC" class="btn btn-primary mb-3">Add Campground/s</a>


    <%for (let campground of campgrounds){%>
        <div class="card mb-3">
            <div class="row">

                <div class="col-md-4">
                    <img class="img-fluid" src="<%=campground.images[0].url%>" alt="sample text">
                </div>


                <div class="col-md-8">
                    <div class="card-body">
                        <h5 class="card-title">
                            <%=campground.title%>
                        </h5>
                        <p class="card-text">
                            <%=campground.description%>
                        </p>
                        <p class="card-text">
                            <%campground.price%>
                        </p>
                        <p class="card-text">
                            <small class="text-muted">
                                <%=campground.location%>
                            </small>
                        </p>
                        <a class="btn btn-primary" href="/campgrounds/<%=campground.id%>">See
                            details</a>
                    </div>
                </div>
            </div>
        </div>

        <script>const campgrounds = {
                features: JSON.parse('<%-JSON.stringify(campgrounds)%>')
            };</script>
        <script>const mapToken = '<%-process.env.MAPBOX_TOKEN%>'</script>
        <script src="javascripts/clusterMap.js"></script>
        <%}%>